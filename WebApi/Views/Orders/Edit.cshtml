@model Domain.Models.Order

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <div class="form-group">
                <label class="control-label">Id</label>
                <input name="Id" class="form-control" value="@Model.Id" disabled />
            </div>
            <div class="form-group">
                <label class="control-label">Number</label>
                <input name="Number" class="form-control" value="@Model.Number"/>
            </div>
            <div class="form-group">
                <label class="control-label">Date</label>
                <input name="Date" class="form-control" value="@Model.Date"/>
            </div>
            <div class="form-group">
                <label class="control-label">Provider Id</label>
                <input name="ProviderId" class="form-control" value="@Model.ProviderId"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary"/>
            </div>
        </form>
        
    </div>
</div>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
